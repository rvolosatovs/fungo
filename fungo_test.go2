func TestReduce(t *testing.T) {
	for _, tc := range []ReduceTestCase[int]{
		{
			Name:     "sum",
			Func:     func(acc int, v int) int { return acc+v },
			Values:   []int{1, 2, 3},
			Expected: 6,
		},
	} {
		runReduceTest(t, tc)
	}
	for _, tc := range []ReduceTestCase[string]{
		{
			Name:     "append string",
			Func:     func(acc string, v string) string { return acc+v },
			Values:   []string{"1", "2", "3"},
			Expected: "123",
		},
	} {
		runReduceTest(t, tc)
	}
}
